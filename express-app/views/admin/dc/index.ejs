<body>
    <div class="container">
      <hr />
      <h2> DÉBITOS / CRÉDITOS</h2>
  
      <hr />
      <div class="row row-cols-1 row-cols-md-2 g-4">

        <div class="col-2">
            <div class="card text-center">
                <a class="btn btn-primary form-control" href="/admin/dc/new"
                >Lançar Débito/Crédito</a
              >
                </div>
            </div>
   <div class="col-4">
    <div class="card text-center">
       <div class="dropdown">
<button class="btn dropdown-toggle form-control" type="button" data-bs-toggle="dropdown" aria-expanded="false">
Investidor
</button>
<ul class="dropdown-menu">
  <li >
    <a class="dropdown-item"  href="/admin/dc">TODOS</a>
  </li>
 <% investidores.forEach(investidor => { %>
<li >
        <a class="dropdown-item"  href="/dc/<%= investidor.id %>"><%= investidor.name %></a>
    </li>
 <% }) %>
</ul>
</div>

    </div>
   </div>
    </div>
<hr/>
<div  class="table1 text-center">
<table id="tab" data-type="table-menu" class="table table-bordered">
    <thead>
        <tr id="table-header">
        <th>Nome</th>
        <th>Data</th>
        <th>Valor</th>
      </tr>
    </thead>
    <tbody id="demo">
        <% dcs.forEach(dc => { %>
            <tr class="pesquisar" href="/<%= dc.id %>">
        <td><%= dc.investidore.name %></td>
        <td><%= dc.data %></td>
        <td><%= dc.valor %></td>
        <td>
            <a
              href="/admin/dc/edit/<%= dc.id %>"
              class="btn btn-warning"
              >Editar</a
            >
            <form
              method="POST"
              action="/dc/delete"
              style="display: inline;"
              onsubmit="confirmarDelecao(event, this)"
            >
              <input type="hidden" name="id" value="<%= dc.id %>" />
              <button class="btn btn-danger">Deletar</button>
            </form>
          </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<hr/>
      </div>
      </body>
