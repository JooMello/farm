        <td>
            <a
              href="/admin/estoque/edit/<%= morte.id %>"
              class="btn btn-warning"
              >Editar</a
            >
            <form
              method="POST"
              action="/morte/delete"
              style="display: inline;"
              onsubmit="confirmarDelecao(event, this)"
            >
              <input type="hidden" name="id" value="<%= morte.id %>" />
              <button class="btn btn-danger">Deletar</button>
            </form>
