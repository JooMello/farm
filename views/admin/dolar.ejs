<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Cotação do Dólar - Fazenda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
            border-radius: 10px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }
        .status-online { background-color: #28a745; }
        .status-offline { background-color: #dc3545; }
        .status-updating { background-color: #ffc107; }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Gerenciar Cotação do Dólar
                        </h4>
                    </div>
                    <div class="card-body">
                        <!-- Status Atual -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card border-info">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Cotação Atual</h5>
                                        <h2 class="text-primary" id="cotacaoAtual">$5.60</h2>
                                        <small class="text-muted" id="ultimaAtualizacao">Carregando...</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-warning">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Status da API</h5>
                                        <div class="mt-2">
                                            <span class="status-indicator" id="statusIndicator"></span>
                                            <span id="statusText">Verificando...</span>
                                        </div>
                                        <small class="text-muted" id="tentativas">Tentativas: 0</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Ações -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <button class="btn btn-primary" onclick="atualizarCotacao()">
                                        <i class="fas fa-sync-alt me-2"></i>
                                        Atualizar via API
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <button class="btn btn-success" onclick="abrirModalManual()">
                                        <i class="fas fa-edit me-2"></i>
                                        Definir Manualmente
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Informações Detalhadas -->
                        <div class="card border-secondary">
                            <div class="card-header">
                                <h6 class="mb-0">Informações Detalhadas</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Atualizando:</strong> <span id="isUpdating">-</span></p>
                                        <p><strong>Fila de Atualizações:</strong> <span id="queueLength">-</span></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Última Atualização:</strong> <span id="ultimaAtualizacaoDetalhada">-</span></p>
                                        <p><strong>Tentativas:</strong> <span id="tentativasDetalhada">-</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para definir valor manualmente -->
    <div class="modal fade" id="modalManual" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Definir Cotação Manualmente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="valorManual" class="form-label">Valor do Dólar (R$)</label>
                        <input type="number" class="form-control" id="valorManual" step="0.01" min="0.01" value="5.60">
                        <div class="form-text">Digite o valor atual do dólar em reais</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="definirCotacaoManual()">Salvar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let modalManual;

        document.addEventListener('DOMContentLoaded', function() {
            modalManual = new bootstrap.Modal(document.getElementById('modalManual'));
            carregarInformacoes();
            setInterval(carregarInformacoes, 5000); // Atualiza a cada 5 segundos
        });

        function carregarInformacoes() {
            fetch('/api/dolar')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('cotacaoAtual').textContent = `$${data.cotacao}`;
                    
                    const statusIndicator = document.getElementById('statusIndicator');
                    const statusText = document.getElementById('statusText');
                    
                    if (data.isUpdating) {
                        statusIndicator.className = 'status-indicator status-updating';
                        statusText.textContent = 'Atualizando...';
                    } else if (data.ultimaAtualizacao) {
                        statusIndicator.className = 'status-indicator status-online';
                        statusText.textContent = 'Online';
                    } else {
                        statusIndicator.className = 'status-indicator status-offline';
                        statusText.textContent = 'Offline';
                    }

                    document.getElementById('tentativas').textContent = `Tentativas: ${data.tentativas}`;
                    document.getElementById('isUpdating').textContent = data.isUpdating ? 'Sim' : 'Não';
                    document.getElementById('queueLength').textContent = data.queueLength;
                    
                    if (data.ultimaAtualizacao) {
                        const data = new Date(data.ultimaAtualizacao);
                        document.getElementById('ultimaAtualizacao').textContent = data.toLocaleString('pt-BR');
                        document.getElementById('ultimaAtualizacaoDetalhada').textContent = data.toLocaleString('pt-BR');
                    } else {
                        document.getElementById('ultimaAtualizacao').textContent = 'Nunca atualizado';
                        document.getElementById('ultimaAtualizacaoDetalhada').textContent = 'Nunca atualizado';
                    }
                    
                    document.getElementById('tentativasDetalhada').textContent = data.tentativas;
                })
                .catch(error => {
                    console.error('Erro ao carregar informações:', error);
                });
        }

        function atualizarCotacao() {
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Atualizando...';
            btn.disabled = true;

            fetch('/api/dolar/update', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    alert('Atualização iniciada! Verifique o status em alguns segundos.');
                })
                .catch(error => {
                    console.error('Erro ao atualizar:', error);
                    alert('Erro ao iniciar atualização');
                })
                .finally(() => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                });
        }

        function abrirModalManual() {
            document.getElementById('valorManual').value = document.getElementById('cotacaoAtual').textContent.replace('$', '');
            modalManual.show();
        }

        function definirCotacaoManual() {
            const valor = document.getElementById('valorManual').value;
            
            if (!valor || parseFloat(valor) <= 0) {
                alert('Digite um valor válido maior que zero');
                return;
            }

            fetch('/api/dolar/set', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ valor: parseFloat(valor) })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Cotação atualizada com sucesso!');
                    modalManual.hide();
                    carregarInformacoes();
                } else {
                    alert('Erro: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Erro ao definir cotação:', error);
                alert('Erro ao definir cotação');
            });
        }
    </script>
</body>
</html>
